packages:
  yum:
    git: []
    postgresql93-devel: []
    python35: []
    python35-pip: []
    python35-devel: []
commands:
  01_node_install:
        cwd: /tmp
        test: '[ ! -f /usr/bin/npm ] && echo "node not installed"'
        command: 'yum install -y npm --enablerepo=epel'
  02_installbower:
    command: 'npm -g install bower'
  03_pip:
    command: 'sudo pip-3.5 install -r /var/app/current/requirements.txt'