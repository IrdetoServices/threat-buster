packages:
  yum:
    git: []
    postgresql93-devel: []
    nodejs: []
commands:
  01_node_install:
        cwd: /tmp
        test: '[ ! -f /usr/bin/node ] && echo "node not installed"'
        command: 'yum install -y node npm --enablerepo=epel'
  02_installbower:
    command: 'npm -g install bower'